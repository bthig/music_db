<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table class="table table-striped table-bordered table-hover table-condensed active">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><div class="btn btn-default btn-success"><%= link_to 'Show', genre %></div></td>
        <td><div class="btn btn-default btn-warning"><%= link_to 'Edit', edit_genre_path(genre) %></div></td>
        <td><div class="btn btn-default btn-danger"><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

