<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table class="table table-striped table-bordered table-hover table-condensed active">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>
        <td><div class="btn btn-default btn-danger"><%= link_to 'Show', song %></div></td>
        <td><div class="btn btn-default btn-default"><%= link_to 'Edit', edit_song_path(song) %></div></td>
        <td><div class="btn btn-default btn-info"><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

